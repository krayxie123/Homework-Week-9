{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Victorian Schools - Median VCE Study Scores",
  "width": 600,
  "height": 700,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/js/vicsuburbsgood.topojson",
        "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
      },
      "mark": {"type": "geoshape", "fill": "#f5f5f5", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/data/dv402-SchoolLocations2025.csv"
      },
      "transform": [
        {
          "lookup": "School_Name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/data/VCE 2024 Results.csv"},
            "key": "School",
            "fields": ["Median VCE study score"]
          }
        },
        {
          "filter": "datum['Median VCE study score'] != null && datum['Median VCE study score'] != 'I/D' && datum['Median VCE study score'] != '-' && datum['Median VCE study score'] != ''"
        },
        {
          "calculate": "parseFloat(datum['Median VCE study score'])",
          "as": "median_score"
        }
      ],
      "mark": {
        "type": "circle",
        "size": 100,
        "opacity": 0.8,
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "longitude": {"field": "X", "type": "quantitative"},
        "latitude": {"field": "Y", "type": "quantitative"},
        "color": {
          "field": "median_score",
          "type": "quantitative",
          "scale": {
            "domain": [20, 40],
            "range": ["#fee5d9", "#fc9272", "#de2d26"],
            "scheme": "reds"
          },
          "legend": {
            "title": "Median VCE Score",
            "orient": "bottom"
          }
        },
        "size": {
          "field": "median_score",
          "type": "quantitative",
          "scale": {
            "domain": [20, 40],
            "range": [50, 200]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "School_Name", "type": "nominal", "title": "School"},
          {"field": "Address_Town", "type": "nominal", "title": "Town"},
          {"field": "Median VCE study score", "type": "quantitative", "title": "Median Study Score", "format": ".1f"},
          {"field": "Education_Sector", "type": "nominal", "title": "Sector"},
          {"field": "LGA_TYPE", "type": "nominal", "title": "Area Type"}
        ]
      }
    }
  ]
}
