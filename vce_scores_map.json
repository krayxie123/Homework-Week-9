{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average VCE Study Scores by Suburb (2024) - Choropleth Map",
  "width": 1600,
  "height": 1000,
  "projection": {
    "type": "mercator",
    "center": [145, -37],
    "scale": 19000
  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#ffffff", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/krayxie123/Homework-Week-9/main/vicsuburbsgood.topojson",
        "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
      },
      "mark": {"type": "geoshape", "fill": "#f5f5f5", "stroke": "#ccc", "strokeWidth": 1}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/krayxie123/Homework-Week-9/main/vicsuburbsgood.topojson",
        "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
      },
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/krayxie123/Homework-Week-9/refs/heads/main/data/suburb_study_scores_joined.csv"
            },
            "key": "suburb",
            "fields": ["avg_study_score", "school_count"]
          }
        },
        {
          "calculate": "datum.avg_study_score != null ? datum.avg_study_score : 10",
          "as": "study_score_with_offset"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "study_score_with_offset",
          "type": "quantitative",
          "title": "Average Study Score",
          "scale": {
            "domain": [0, 37],
            "range": ["#fee5d9", "#fc9272", "#de2d26"],
            "scheme": "reds"
          },
          "legend": {"orient": "bottom"},
          "nullColor": "#ffa500"
        },
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb"},
          {"field": "avg_study_score", "type": "quantitative", "title": "Avg Study Score", "format": ".1f"},
          {"field": "school_count", "type": "quantitative", "title": "Schools"}
        ]
      }
    },
    {
      "data": {"graticule": {"step": [1, 1]}},
      "mark": {"type": "geoshape", "stroke": "grey", "strokeWidth": 0.5, "fill": null}
    }
  ]
}